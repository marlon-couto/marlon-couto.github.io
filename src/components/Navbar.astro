---
import HamburgerMenu from "./HamburgerMenu.astro";
import ThemeToggle from "./ThemeToggle.astro";

const navLinks = [
    { href: "#header", text: "Início" },
    { href: "#about-me", text: "Sobre Mim" },
    { href: "#experience", text: "Experiência" },
    { href: "#skills", text: "Skills" },
    { href: "#contact", text: "Contato" }
];
---

<!--NAVBAR-->
<nav class="navbar navbar-expand-lg fixed-top pt-2" role="navigation">
    <div class="container">
        <a href="#" class="navbar-brand fs-3 fw-semibold alt-font">Marlon Couto</a>
        <HamburgerMenu></HamburgerMenu>
        <!--LINKS DE NAVEGAÇÃO-->
        <ul class="d-none navbar-nav d-lg-flex mt-2" id="navbar-links">
            {navLinks.map(link => (
                <li class="nav-item">
                    <a href={link.href} class="nav-link link-lg">{link.text}</a>
                </li>
            ))}
            <!--LINKS SOCIAIS-->
            <li>
              <ul class="navbar-nav ms-lg-3 nav-icons">
                <li class="nav-item">
                      <a
                          href="mailto:coutoozair@gmail.com"
                          class="nav-link"
                          title="Me envie um email: coutoozair@gmail.com"
                          target="_blank"
                      >
                          <i class="fas fa-inbox fa-2x"></i>
                      </a>
                  </li>
                  <li class="nav-item">
                      <a
                          href="https://github.com/marlon-couto"
                          target="_blank"
                          class="nav-link github-icon"
                          title="Me siga no GitHub"
                      >
                          <i class="fab fa-github fa-2x"></i>
                      </a>
                  </li>
                  <li class="nav-item">
                      <a
                          href="https://linkedin.com/in/marlon-couto"
                          title="Vamos nos conectar no LinkedIn"
                          target="_blank"
                          class="nav-link linkedin-icon"
                      >
                          <i class="fab fa-linkedin fa-2x"></i>
                      </a>
                  </li>
              </ul>
            </li>
        </ul>
        <ThemeToggle></ThemeToggle>
    </div>
</nav>
